<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <Style TargetType="Label">
      <Setter Property="TextColor" Value="{StaticResource Black}"/>
  </Style>

  <Style TargetType="Label" x:Key="BannerLable">
      <Setter Property="TextColor" Value="{StaticResource Black}"/>
      <Setter Property="HorizontalTextAlignment" Value="Center"/>
      <Setter Property="FontSize" Value="40"/>

      <Setter Property="Padding" Value="10, 30, 10, 30"/>
  </Style>

  <Style TargetType="Label" x:Key="ErrorLable">
      <Setter Property="TextColor" Value="{StaticResource Error}"/>
      <Setter Property="HorizontalTextAlignment" Value="Center"/>

      <Setter Property="Padding" Value="10"/>
  </Style>

  <Style TargetType="Entry">
      <Setter Property="Background" Value="{StaticResource Primary50}"/>
      <Setter Property="TextColor" Value="Black"/>

      <Setter Property="HeightRequest" Value="40"/>
      <Setter Property="WidthRequest" Value="300"/>
      <Setter Property="Margin" Value="10"/>
  </Style>

  <Style TargetType="Entry" x:Key="AdminProductManagerEntry">
      <Setter Property="WidthRequest" Value="200"/>
      <Setter Property="Margin" Value="0, 10, 0, 10"/>
  </Style>

  <Style TargetType="Button">
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="TextColor" Value="{StaticResource Primary}"/>

      <Setter Property="Margin" Value="5"/>

      <Setter Property="BorderWidth" Value="0"/>
      <Setter Property="BorderColor" Value="Transparent"/>
  </Style>

  <Style TargetType="Button" x:Key="SpecialButton">
      <Setter Property="Background" Value="{StaticResource Primary}"/>
      <Setter Property="TextColor" Value="{StaticResource White}"/>
      <Setter Property="FontAttributes" Value="Bold"/>

      <Setter Property="HeightRequest" Value="50"/>
      <Setter Property="WidthRequest" Value="200"/>
      <Setter Property="Margin" Value="10"/>
  </Style>

  <Style TargetType="Picker">
      <Setter Property="Background" Value="{StaticResource Primary}"/>

      <Setter Property="WidthRequest" Value="200"/>
      <Setter Property="Margin" Value="0, 10, 0, 10"/>
  </Style>

  <Style TargetType="VerticalStackLayout" x:Key="AdminProductManagerVertivalStackLayout">
      <Setter Property="Padding" Value="10"/>
  </Style>

    <Style TargetType="VerticalStackLayout" x:Key="Menu">
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style TargetType="Page" ApplyToDerivedTypes="True">
      <Setter Property="Padding" Value="0"/>
      <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}" />
  </Style>

</ResourceDictionary>
