<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PastryAdmin.Pages.Admin_Login_Page"
             Title="Admin_Login_Page">
    <StackLayout>
        <Label Text="Admin Login"/>
        <Entry x:Name="login__entry" Placeholder="login" MaxLength="20"/>
        <Entry x:Name="password__entry" Placeholder="password" MaxLength="30"/>

        <Label x:Name="error__label" TextColor="Red"/>

        <Button Text="Login" Clicked="Login_"/>
    </StackLayout>
</ContentPage>
