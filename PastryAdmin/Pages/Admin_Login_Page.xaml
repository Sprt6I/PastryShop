<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PastryAdmin.Pages.Admin_Login_Page"
             Title="Admin_Login_Page">
    <StackLayout>
        <Label Text="Admin Login" Style="{DynamicResource Key=BannerLable}"/>
        <Entry x:Name="login__entry" Placeholder="Enter login" MaxLength="20"/>
        <Entry x:Name="password__entry" Placeholder="Enter password" MaxLength="30"/>
        
        <Button Text="Login" Clicked="Login_" Style="{DynamicResource Key=SpecialButton}"/>
        <Label x:Name="error__label" Style="{DynamicResource Key=ErrorLable}"/>
    </StackLayout>
</ContentPage>
