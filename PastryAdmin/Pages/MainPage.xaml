<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             x:Class="PastryAdmin.MainPage">

    <VerticalStackLayout>
        <Label Text="Admin" Style="{DynamicResource Key=BannerLable}"/>
        <Button Text="Manage Products" Clicked="Go_To_Product_Manager_"  Style="{DynamicResource Key=SpecialButton}"/>

        <lvc:CartesianChart Series="{Binding series}" XAxes="{Binding x_axes}" YAxes="{Binding y_axes}" HeightRequest="300"/>
        <Button Text="Refresh" Clicked="Refresh_Chart_"/>
    </VerticalStackLayout>

</ContentPage>
