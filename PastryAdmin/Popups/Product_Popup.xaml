<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="PastryAdmin.Popups.Product_Popup">

        <VerticalStackLayout
           VerticalOptions="Center"
           HorizontalOptions="Center">
            <Entry Text="{Binding Name, Mode=TwoWay}" MaxLength="30"/>
            <Entry Text="{Binding Description, Mode=TwoWay}" MaxLength="120"/>
            <Picker SelectedItem="{Binding Category}"/>
            <Entry Text="{Binding In_Stock, Mode=TwoWay}"  MaxLength="5" Keyboard="Numeric" TextChanged="How_Many_In_Stock_Entry_Text_Changed_"/>
            <Entry Text="{Binding Price, Mode=TwoWay}" MaxLength="6" Keyboard="Numeric" TextChanged="Price_Entry_Text_Changed_"/>

            <Button Text="Save" Clicked="Save_Clicked_" Style="{DynamicResource Key=SpecialButton}"/>
        </VerticalStackLayout>

</toolkit:Popup>