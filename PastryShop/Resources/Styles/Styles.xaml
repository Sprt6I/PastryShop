<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource Black}"/>

    </Style>

    <Style TargetType="Label" x:Key="ProductNameLabel">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <Style TargetType="Label" x:Key="ProductDescLabel">
        <Setter Property="Padding" Value="10"/>
    </Style>

    <Style TargetType="Label" x:Key="ProductAmoutLabel">
    </Style>

    <Style TargetType="Label" x:Key="ProductPriceLabel">
    </Style>

    <Style TargetType="Label" x:Key="BannerLable">
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="40"/>

        <Setter Property="Padding" Value="10, 30, 10, 30"/>
    </Style>

    <Style TargetType="Label" x:Key="ErrorLable">
        <Setter Property="TextColor" Value="{StaticResource Error}"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>

        <Setter Property="Padding" Value="10"/>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="Background" Value="{StaticResource Primary50}"/>
        <Setter Property="TextColor" Value="Black"/>

        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="WidthRequest" Value="300"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <Style TargetType="Image" x:Key="ProductImage">
        <Setter Property="WidthRequest" Value="200"/>
        <Setter Property="HeightRequest" Value="200"/>
    </Style>

    <Style TargetType="Entry" x:Key="WidgetEntry">
        <Setter Property="WidthRequest" Value="240"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource Primary}"/>

        <Setter Property="Margin" Value="5"/>

        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="BorderColor" Value="Transparent"/>
    </Style>

    <Style TargetType="Button" x:Key="SpecialButton">
        <Setter Property="Background" Value="{StaticResource Primary}"/>
        <Setter Property="TextColor" Value="{StaticResource White}"/>
        <Setter Property="FontAttributes" Value="Bold"/>

        <Setter Property="HeightRequest" Value="50"/>
        <Setter Property="WidthRequest" Value="200"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource SpecialButton}" x:Key="ShowPasswordButton">
        <Setter Property="Background" Value="{StaticResource Primary}"/>

        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="WidthRequest" Value="40"/>
    </Style>

    <Style TargetType="Frame">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}" />
    </Style>

    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}" />
    </Style>

    <Style TargetType="VerticalStackLayout">
        <Setter Property="HorizontalOptions" Value="Center"/>
    </Style>

    <Style TargetType="VerticalStackLayout"  x:Key="ProductVerticalStackLayout">
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="Padding" Value="15"/>
    </Style>

    <Style TargetType="HorizontalStackLayout" x:Key="ProductHorizontalStackLayout">
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>

</ResourceDictionary>
