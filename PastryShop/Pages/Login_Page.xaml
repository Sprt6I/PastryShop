<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Custom_Widgets="clr-namespace:PastryShop.Custom_Widgets"
             x:Class="PastryShop.Login_Page"
             Title="Login_Page">
    <VerticalStackLayout>
        <Label>Login</Label>

        <Entry x:Name="login_gmail_entry" Placeholder="gmail" MaxLength="50"/>
        <Custom_Widgets:Password_Entry_Widget x:Name="login_password_entry"/>
        <!--<Entry x:Name="login_password_entry" Placeholder="password" IsPassword="True"/>-->



        <Label Text="" x:Name="login_errors_label"/>

        <Button Clicked="Login_" Text="Login"/>
        <Button Clicked="Forgot_Password_" Text="I don't remember password"/>
        <Button Clicked="Go_To_Register_" Text="I don't have an account"/>
    </VerticalStackLayout>
</ContentPage>