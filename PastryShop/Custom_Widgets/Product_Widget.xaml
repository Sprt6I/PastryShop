        <HorizontalStackLayout Style="{DynamicResource ProductHorizontalStackLayout}">

        </HorizontalStackLayout>


        <HorizontalStackLayout Style="{DynamicResource ProductHorizontalStackLayout}">

        </HorizontalStackLayout>

    </VerticalStackLayout>-->

</ContentView>
