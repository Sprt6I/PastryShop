<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Name="Root"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:PastryShop.Custom_Widgets"
             x:Class="PastryShop.Custom_Widgets.Password_Entry_Widget">
    <Frame Padding="0" HasShadow="False" CornerRadius="8">
        <StackLayout Orientation="Horizontal">
            <Entry x:Name="password_entry" Text="{Binding Source={x:Reference Root}, Path=Text, Mode=TwoWay}" Placeholder="password" IsPassword="True" MaxLength="30" Style="{DynamicResource Key=WidgetEntry}"/>
            <Button x:Name="show_password_button" Text="👁️" Clicked="Show_Password_" Style="{DynamicResource Key=ShowPasswordButton}"/>
        </StackLayout>
    </Frame>

</ContentView>
